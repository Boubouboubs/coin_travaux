<div class= "container-form">
  <div class="col-10 col-md-4 card shadow zoom">
      <%= simple_form_for @project do |f| %>
        <%= f.input :property_type,
                    label: "Type de propriété",
                    as: :radio_buttons,
                    collection_wrapper_tag: 'div',
                    collection_wrapper_class: 'category-wrapper',
                    item_wrapper_class: 'category-item me-1',
                    input_html: {class: 'category-selector'},
                    collection: Project::PROPERTY_TYPE %>
        <%= f.input :surface, label: "Surface"%>
        <%= f.input :renovation_type,
                    label: "Type de rénovation",
                    collection: Project::RENOVATION_TYPE, as: :radio_buttons,
                    collection_wrapper_class: 'category-wrapper' %>
        <%= f.input :visit_date,
                    label: "Créneau de la visite",
                    as: :string,
                    input_html: { data: { controller: "datepicker" } } %>
        <%= f.input :address,
                    label: "Adresse du bien",
                    input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
                    wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
        <div class= "my-class mt-4 text-center " type="checkbox"><%= f.submit "C'est parti !", class: "btn btn-primary text-white" %></div>
    <% end %>
  </div>
</div>
