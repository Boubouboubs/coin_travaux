<div class= "container-form">
  <div class="col-10 col-md-4 card shadow">
      <%= simple_form_for @project do |f| %>
        <%= f.input :property_type,
                    label: "Type de propriété",
                    as: :radio_buttons,
                    collection_wrapper_tag: 'div',
                    collection_wrapper_class: 'category-wrapper',
                    item_wrapper_class: 'category-item me-1',
                    input_html: {class: 'category-selector'},
                    collection: Project::PROPERTY_TYPE %>
        <%= f.input :renovation_type,
                    label: "Type de rénovation",
                    collection: Project::RENOVATION_TYPE, as: :radio_buttons,
                    input_html: {class: 'category-buttons'} %>
        <div class="d-flex justify-content-between" style="gap: 40px">
          <div class="flex-fill"><%= f.input :surface, label: "Surface", input_html: { class: "text-body-size", min: 0 }%></div>
          <div class="flex-fill"> <%= f.input :visit_date, label: "Créneau de la visite", as: :string, input_html: { data: { controller: "datepicker" }, class: "text-body-size" } %> </div>
        </div>
        <%= f.input :address,
                    label: "Adresse du bien",
                    input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
                    wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
        <div class= "my-class mt-4 text-center" type="checkbox"><%= f.submit "C'est parti !", class: "btn btn-primary rounded text-white" %></div>
    <% end %>
  </div>
</div>
