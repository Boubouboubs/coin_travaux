      <th scope="col">Tarif</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row"> <%= @chosen_company.name%></th>
      <td><%= link_to "Voir le devis" %></td>
      <td><%= @project.quotes.price %></td>
    </tr>
    <tr>
      <th scope="row"> <%= @chosen_company.name%> </th>
      <td>Jacob</td>
      <td><%= @project.quotes.price %></td>
    </tr>
    <tr>
      <th scope="row">3</th>
      <td colspan="2">Larry the Bird</td>
      <td><%= @project.quotes.price %></td>
    </tr>
  </tbody>
</table>
  <% elsif Date.today > @project.created_at %>
    OK !!!
  <% end %>
</div>
