<div class="container my-4">
  <div class="row d-flex">

  <% @companies.each do |company| %>
    <div class="col-4 mb-5">
      <%= link_to company_path(company), style:"text-decoration: none" do %>
        <div class="card-company my-2 mx-5">
        <% if company.project_photo %>
          <%= image_tag company.project_photo, crop: :fill %>
        <% else %>
          <img src="" alt="", height=300, width=400>
        <% end %>
        <div class="card-company-infos">
          <h2><%= company.name %></h2>
          <p><%= company.description.truncate(50) %> <strong>voir plus.</strong></p>
          <div class="d-flex justify-content-between">
            <p><strong><%= company.average_rating %>/5</strong></p>
            <p><span class="badge bg-secondary"><% %></span></p>
          </div>
        </div>
        </div>
      <% end %>
    </div>
  <% end %>
  </div>
</div>
