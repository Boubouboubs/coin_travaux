<div class="container">
  <div class="card-banner-show my-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @company.project_photo.key %>);"></div>
    <div class="card-company my-2 mx-5">
      <div class="card-company-infos">
      <nav>
  <div class="nav nav-tabs" id="nav-tab" role="tablist">
    <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">À propos de nous</button>
    <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Détails de l'entreprise</button>
    <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-contact" type="button" role="tab" aria-controls="nav-contact" aria-selected="false">Avis</button>
  </div>
  </nav>
  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
      <div class="mt-2">
        <h2><%= cl_image_tag @company.logo.key, class:"avatar" %> <%= @company.name %></h2>
        <p><%= @company.description %></p>
      </div>
    </div>
    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
      <div class= "row">
        <div class="col-6 mt-2">
          <h2><%= cl_image_tag @company.logo.key, class:"avatar" %> <%= @company.name %></h2>
          <p><%= @company.name %></p>
          <p><%= @company.address %></p>
        </div>
        <div class="col-6 mt-2">
        <p><strong>Site et réseaux sociaux</strong></p>
        <p>www.<%= @company.name %>.com</p>
          <div class="row mt-4">
            <a href="#"><i class="fab fa-instagram fa-lg"></i> <%= @company.name %></a>
            <a href="#"><i class="fab fa-facebook fa-lg"></i> <%= @company.name %></a>
            <a href="#"><i class="fab fa-twitter fa-lg"></i> <%= @company.name %></a>
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">...</div>
  </div>

</div>
