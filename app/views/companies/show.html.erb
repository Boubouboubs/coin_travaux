<div class="container">
  <div class="d-flex my-4">
    <div class="card-banner-show my-4">
      <% if @company.projects_photos.second %>
        <%= cl_image_tag @company.projects_photos.second.key, class:"card-banner-show", style:"height:100%" %>
      <% else %>
        <%= cl_image_tag @company.projects_photos.first.key, class:"card-banner-show", style:"height:100%" %>
      <% end %>
    </div>
    <div class="d-flex flex-column flex-grow-1 ms-4 my-4">
      <h3><%= cl_image_tag @company.logo.key, class:"avatar" %> <%= @company.name %></h3>
      <nav>
        <div class="nav nav-tabs border-0" id="nav-tab" role="tablist">
          <button class="nav-link active border-0" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">À propos de nous</button>
          <button class="nav-link border-0" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Détails de l'entreprise</button>
        <button class="nav-link border-0" ><a href="#Avis" style="text-decoration: none">Avis</a></button>
        </div>
      </nav>
      <div class="flex-grow-1 tab-content m-2" id="nav-tabContent">
        <div class="tab-pane fade show active tab-desc mt-2" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
          <p><%= @company.description %></p>
        </div>
        <div class="tab-pane fade tab-desc mt-2" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
          <p><strong>Adresse</strong></p>
          <p><%= @company.address %></p>
          <p><strong>Site et réseaux sociaux</strong></p>
          <p><a href="#">www.<%= @company.name.split(' ').last.strip %>.com</p>
          <a href="#"><i class="fab fa-instagram fa-lg"></i></a>
          <a href="#"><i class="fab fa-facebook fa-lg"></i></a>
          <a href="#"><i class="fab fa-twitter fa-lg"></i></a>
        </div>
      </div>
      <div class="d-flex justify-content-end">
        <button type="button" class="btn btn-primary text-white" data-bs-toggle="modal" data-bs-target="#summaryModal">
        Je prends RDV !
        </button>
      </div>
    </div>
  </div>

  <div class="modal fade" id="summaryModal" tabindex="-1" aria-labelledby="summaryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <div class="text-center w-100"><h1 class="modal-title fs-5" id="summaryModalLabel">Votre RDV</h1></div>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p><%= cl_image_tag @company.logo.key, class:"avatar" %> <strong><%= @company.name %></strong></p>
          <p>Le <%= @project.visit_date.strftime("%d/%m/%Y à %H:%M") %></p>
          <p><strong>Adresse du projet : </strong><%= @project.address %></p>
          <p><strong>Surface : </strong><%= @project.surface %> m2</p>
          <p><strong>Type de propriété : </strong><%= @project.property_type %></p>
          <p><strong>Type de rénovation : </strong><%= @project.renovation_type %></p>
        </div>
        <div class="modal-footer">
          <i class="fa-solid fa-pen-to-square" style="color: #787878;"></i>
          <div><%= link_to "Continuer", project_project_companies_path(@project, {project_company: {company_id: @company.id}}), data: { turbo_method: :post }, class:"btn btn-primary text-white" %></div>
        </div>
      </div>
    </div>
  </div>

  <div class="row d-flex mx-2">
    <% @company.projects.each do |project| %>
      <div class="col-4 mb-5">
        <div class="card-company my-2 mx-2 zoom">
          <div class="card-image">
            <div id="carouselImgControls<%= project.id %>" class="carousel slide">
              <div class="carousel-inner">
                <% if project.photos %>
                  <% project.photos.each_with_index do |photo, index| %>
                    <div class="carousel-item <%= "active" if index == 0 %>">
                      <div class="card-image">
                        <%= cl_image_tag photo.key, crop: :fill %>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselImgControls<%= project.id %>" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselImgControls<%= project.id %>" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </div>
          <div class="card-company-infos">
            <div class="row">
              <% if project.average_rating_project %>
                <div class="d-flex mt-1">
                  <div id="stars">
                    <% project.average_rating_project.round.times do %>
                      <i class="fa-solid fa-star" style="color: #fecc00;"></i>
                    <% end %>
                  </div>
                  <div id="stars" class="ms-1"><em> <%= project.average_rating_project %>/5</em>
                  </div>
                </div>
                <% end %>
              <p><strong>Ville du projet : </strong><%= project.city %></p>
              <p><strong>Propriété : </strong><%= project.property_type %></p>
              <p><strong>Surface : </strong><%= project.surface %> m2</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <hr class="celine">

  <h4><%= @company.reviews.count %> avis de nos clients pour <%= @company.name %></h4>
  <div class="row d-flex">
    <a id="Avis"></a>
      <% @company.reviews.each do |review| %>
      <div class="d-flex justify-content-between avis mt-2">
        <div>
          <p><strong>
            <%= cl_image_tag review.project_company.project.user.photo.key, class:"avatar" %> <%= review.project_company.project.user.first_name %> <%= review.project_company.project.user.last_name.first %>.
          </strong></p>
         </div>
        <div>
          <p class="light-gray">
            <% review.rating.round.times do %>
              <i class="fa-solid fa-star" style="color: #fecc00;"></i>
            <% end %>
            <em><%= review.created_at.strftime('Publié le %d/%m/%Y à %Hh%M')%></em>
          </p>
        </div>

      </div>
        <p><%= review.comment %></p>
        <hr>
      <% end %>
  </div>

</div>
